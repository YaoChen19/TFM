<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button_gesture_a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gesture A"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"/>

    <Button
        android:id="@+id/button_gesture_u"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gesture U"
        android:layout_below="@id/button_gesture_a"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/button_gesture_d"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gesture D"
        android:layout_below="@id/button_gesture_u"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/button_gesture_l"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gesture L"
        android:layout_below="@id/button_gesture_d"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/button_gesture_r"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gesture R"
        android:layout_below="@id/button_gesture_l"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/button_gesture_x"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gesture X"
        android:layout_below="@id/button_gesture_r"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

</RelativeLayout>