<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:padding="16dp">

    <ImageButton
        android:id="@+id/buttonSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:src="@android:drawable/ic_menu_preferences"
        android:tint="#171616"
        android:contentDescription="Settings"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp" />

    <TextView
        android:id="@+id/resultText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:text="Detected Gesture: "
        android:textSize="18sp"
        android:textColor="#333333"
        android:layout_alignParentBottom="true"
        android:background="@drawable/instruction_text_background"
        android:padding="10dp"
        android:gravity="center" />

    <Button
        android:id="@+id/buttonRecording"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:text="Start"
        android:textSize="24sp"
        android:background="@drawable/circular_button_background"
        android:textColor="@android:color/white"
        android:elevation="8dp" />

    <TextView
        android:id="@+id/instructionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/buttonRecording"
        android:layout_marginBottom="16dp"
        android:padding="10dp"
        android:text="Please long press the button below to recognize the drawn gesture"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:background="@drawable/instruction_text_background" />

</RelativeLayout>
